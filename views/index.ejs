<html>

<head>
    <title>MEMESUPREME.COM</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/toggleswitch.min.css">
    <link rel="stylesheet" href="css/autocomplete.min.css">
    <link rel="stylesheet" href="framework/fontawesome-free/css/all.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="icon" href="imgs/favicon.png">
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/script.js"></script>
    <script src="js/bootstrap-filestyle.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="/resources/demos/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
</head>

<body>
    
    <%  if(typeof data.user === 'undefined'){%>
    <%- include navbar %>
    <%} else {%>
    <%- include loggedinnavbar %>
    <%} %>
    
    <div class= "allposts">
        <div class="container img-post">
        <div class="row">
            <div class="fixed col-mx-4 mx-auto steadysizecontainer">
                <br>
                <br>
                <div class="card ml-5">
                    <div class="card-header">
                        <h4 align =center><strong>PICK YOUR POISON</strong></h4>
                    </div>
                    <div class="card-body">
                        <i>Available categories to choose from</i>
                        <div class="pb-2 mt-4 mb-2">
                            <a data-toggle="modal" data-target="#wfModal" >
                                <p align= center>
                                <% for(var i = 0; i < data.list.length; i++) { %>
                                 <% for(var j = 0; j < data.list[i].tags.length; j++) {%>
                                <span style="font-size: 11pt;" class="badge badge-warning"><%= data.list[i].tags[j] %></span><% } %>
                                <% } %>
                                </p>
                            </a>
                            
                            <select multiple id="e1" style="width:300px">
                                <% for(var i = 0; i < data.list.length; i++) { %>
                                    <% for(var j = 0; j < data.list[i].tags.length; j++) {%>
                                        <option value="<%= data.list[i].tags[j] %>"><%= data.list[i].tags[j] %></option>
                                    <% } %>
                                <% } %>
                            </select>
                            
                            <script>
                            $(document).ready(function() { 
                                $("#e1").select2();
                            });    
                                
                            </script>
                            
                            <br>
                            <br>
                            <form class="form-inline" >
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit" style="text-align: center;">Search</button>
                            </form>
                                
                        </div>
                    </div>
                    <div class="card-footer">
                        <small>copyright @ hehe.com</small>

                    </div>
                
                </div>
            </div>
            <div class="col-lg-6 steadysizepostcontainer">
                <%  if(typeof data.user === 'undefined'){%>
                <%} else {%>
                <%- include uploader %>
                <%} %>
                <br>
                <% for(var i = 0; i < data.list.length; i++) { %>
                <div class="card">
                    <div class="card-header">
                        <h2 align =center><strong><%= data.list[i].title %></strong></h2>
                        <p align =center>
                        <% for(var j = 0; j < data.list[i].tags.length; j++) {%>
                        <span class="badge badge-primary"><%= data.list[i].tags[j] %></span><% } %></p>
                        <p style="text-align:left; margin: 0;padding: 0;"><strong><a href="">by <%= data.list[i].user %> </a></strong>
                            <span style="float:right;"><small style="color:grey;">posted <%= data.list[i].datePosted %></small></span>
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="pb-2 mt-4 mb-2 ">
                            <a data-toggle="modal" data-target="#wfModal">
                                 <img src='./imgs/upload/<%= data.list[i].image %>'/>
                            </a>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-outline-success fa-2x fas fa-arrow-up"></button>
                        <button class="btn btn-outline-danger fa-2x fas fa-arrow-down"></button>
                        <button class="btn btn-outline-primary  fa-2x fab fa-facebook-f"></button>
                        <button class="btn btn-outline-info fa-2x fab fa-twitter "></button>
                        <button class="btn btn-outline-secondary  fa-2x fas fa-comment-alt"></button>
                    </div>
                </div>
                <br>
                <% } %>
            </div>
        </div>
        </div>

    </div>
    
    


    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <a href="#">See more...</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <hr class="rgba-white-light" style="margin: 0 15%;">
 
    <%- include footer %>

</body>

</html>
