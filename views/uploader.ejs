                            <input class="form-control input-lg" type="text" placeholder="Meme Tags" aria-label="Upload">
                            <br>
                            <div class="uploadbtn">
                                <button class="btn btn-dark btn-lg my-2 my-sm-1" type="submit">Upload Meme</button>
