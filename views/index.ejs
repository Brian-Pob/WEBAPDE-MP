<html>

<head>
    <title>MEMESUPREME.COM</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <script src="js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="framework/fontawesome-free/css/all.css">
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/script.js"></script>
</head>

<body>
    <%- include navbar %>

    <!-- Posts -->
    <!-- Start of post -->
    <div class="container img-post">

        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h3>
                            <strong>I love this game!</strong>
                        </h3>
                        <span class="badge badge-primary">Gaming</span>
                        <p>
                            <small>1,234 points · 56 comments</small>

                        </p>

                    </div>
                    <div class="card-body">
                        <div class="pb-2 mt-4 mb-2 ">
                            <a data-toggle="modal" data-target="#wfModal">
                                <img class="rounded picture" src="imgs/wf.jpg">
                            </a>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-outline-success fa-2x fas fa-arrow-up"></button>
                        <button class="btn btn-outline-danger fa-2x fas fa-arrow-down"></button>
                        <button class="btn btn-outline-primary  fa-2x fab fa-facebook-f"></button>
                        <button class="btn btn-outline-info fa-2x fab fa-twitter "></button>
                        <button class="btn btn-outline-secondary  fa-2x fas fa-comment-alt"></button>

                    </div>
                </div>
            </div>
        </div>
        <!-- Start of Modal -->
        <div class="modal fade" id="wfModal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <div class="card">
                            <div class="card-header">
                                <h3>
                                    <strong>I love this game!</strong>
                                </h3>
                                <span class="badge badge-primary">Gaming</span>
                                <p>
                                    <small>1,234 points · 56 comments</small>
                                </p>
                            </div>
                            <div class="card-body">
                                <div class="pb-2 mt-4 mb-2 ">
                                    <a href="#wfModal">
                                        <img class="rounded picture" src="imgs/wf.jpg">
                                    </a>
                                </div>

                            </div>
                            <div class="card-footer">
                                <button class="btn btn-outline-success fa-2x fas fa-arrow-up"></button>
                                <button class="btn btn-outline-danger fa-2x fas fa-arrow-down"></button>
                                <button class="btn btn-outline-primary  fa-2x fab fa-facebook-f"></button>
                                <button class="btn btn-outline-info fa-2x fab fa-twitter "></button>
                                <button class="btn btn-outline-secondary  fa-2x fas fa-comment-alt"></button>
                                <div>
                                    <label>
                                        <b>Anonymous: </b>This game is amazing!</label>
                                </div>
                                <div>
                                    <input type="text" class="commentBox" placeholder="Add a comment...">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of Modal -->
    </div>
    <!-- End of post-->

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <a href="#">See more...</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <hr class="rgba-white-light" style="margin: 0 15%;">

    <%- include footer %>
</body>

</html>